<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="picture_camera">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width_or_height</item>
        <item name="android:background">@color/default_line_bg</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_width_or_height</item>
        <item name="android:background">@color/default_line_bg</item>
    </style>

    <style name="defaule_button_style" parent="Base.Widget.AppCompat.Button.Small">
        <item name="android:background">@null</item>
        <!--文字大小写控制-->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- android:windowBackground换窗口默认背景-->
    <!--  android:windowFrame设置Dialog的windowFrame框为无（去掉白色边框）-->
    <!-- ndroid:windowIsFloating是否浮现在activity之上-->
    <!--  android:windowIsTranslucent是否半透明-->
    <!-- android:backgroundDimEnabled背景是否模糊显示-->
    <style name="dialog_be_full_off_window">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_anim_picture_select_preview">
        <item name="android:windowEnterAnimation">@anim/anim_from_center</item>
        <item name="android:windowExitAnimation">@anim/anim_to_center</item>
    </style>


    <!--相机中所有按钮的样式-->
    <style name="all_picture_camera_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
